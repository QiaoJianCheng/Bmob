<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y150"
        android:text="@string/text_time"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textSizeSmall"/>

    <TextView
        android:id="@+id/sensor_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:keepScreenOn="true"
        android:text="@string/text_start_time"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/x80"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y200"
        android:text="@string/text_count"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textSizeSmall"/>

    <TextView
        android:id="@+id/sensor_count_tv"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x300"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:text="@string/text_start_count"
        android:textColor="@color/colorTextDark"
        android:textSize="@dimen/x200"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y200">

        <ImageView
            android:id="@+id/sensor_stop_iv"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:padding="@dimen/x20"
            android:src="@drawable/stop"/>

        <ImageView
            android:id="@+id/sensor_start_iv"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_centerInParent="true"
            android:padding="@dimen/x20"
            android:src="@drawable/start"/>
    </RelativeLayout>
</LinearLayout>
