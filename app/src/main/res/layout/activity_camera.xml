<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <RelativeLayout
        android:id="@+id/camera_preview_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.visionvera.bmob.activity.plan.camera.CameraView
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/shot_iv"
            android:layout_width="@dimen/y220"
            android:layout_height="@dimen/y220"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/icon_50_mini_camera_shutter"/>

        <ImageView
            android:id="@+id/switch_iv"
            android:layout_width="@dimen/y220"
            android:layout_height="@dimen/y220"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="20dp"
            android:padding="@dimen/y55"
            android:src="@drawable/icon_22_camera_switch"
            android:tint="@color/colorWhite"/>

        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/x20"
            android:text="00:00"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeNormal"/>
    </RelativeLayout>

</RelativeLayout>
